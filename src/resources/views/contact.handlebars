<section class="mb-4">

    <div class="row">
            <div class="col-md-12">
                <div class="main-title wow fadeIn" data-wow-delay="300ms">
                    <h2> <b>Contact</b> us</h2>
                    <p>Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.</p>
                </div>
            </div>
    </div>
    
    <div class="container-formcontact">
        <div class="formcontact">
            <div class="formcontact-form">
                <form action="/contact" method="post" id="formcontactform">
                    <p> Full name </p>
                    <h5 id="mesfullname">Full name required. Please enter your full name.</h5>
                    <input type="text" name="fullname" id="fullname">
                    <p> Subject </p>
                    <h5 id="messubject">Subject required. Please enter subject.</h5>
                    <input type="text" name="subject" id="subject">
                    <p> Email </p>
                    <h5 id="mesemail">Email required. Please enter your email.</h5>
                    <input type="text" name="email" id="email">
                    <p> Your messages </p>
                    <h5 id="yourmes">Your messages required. Please enter your messages.</h5>
                    <textarea name="messages" id="messages" cols="65" rows="4"></textarea>
                    <input type="submit" name="submit" id="btnsendmail" class="btn btn-primary" value="Send">
                </form>
            </div>
            <div class="formcontact-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3928.8365287276297!2d105.768691027305!3d10.030345106231573!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31a0883d2192b0f1%3A0x4c90a391d232ccce!2zS2hvYSBDw7RuZyBOZ2jhu4cgVGjDtG5nIFRpbiB2w6AgVHJ1eeG7gW4gVGjDtG5nIChDVFUp!5e0!3m2!1svi!2s!4v1632494028636!5m2!1svi!2s" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</section>
