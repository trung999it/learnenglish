<div class="container-account">
    <div class="left-container-account">
        {{#if avatar}}
            <img src="image/default-avatar.png" alt="avatar" class="avatar-account">
        {{else}}
            <img class="avatar-account" src="{{img}}" alt="avatar">  
        {{/if}}
        
        <h4>{{firstname}} {{lastname}}</h4>
        <p>{{email}}</p>
         <ul>
             <li><a href="/account">My Info</a></li>
             {{#if teacher}}
             <li><a href="/aboutcreatecourse">How to create course?</a></li>
             <li><a href="/coursemanagement">Course Management</a></li>
             {{else}}
            <li><a href="/mycourse">My Course</a></li>
             {{/if}}
             <li><a href="/changepassword">Change Password</a></li>
             <li><a href="/updateavatar">Change Avatar</a></li>
         </ul>
    </div>
    <div class="right-container-listlesson">
       
        <div class="listlesson">
            <h2>{{course.coursename}}</h2>
            <iframe width="100%" height="415" src="https://www.youtube.com/embed/{{video_id}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>


        <div class="menu-listlesson">
            <div class="btn-group btn-group-toggle btn-block" data-toggle="buttons">
                <label class="btn btn-secondary active">
                    <input type="radio" name="optionsmenu" id="optionsmenu1" autocomplete="off"> Today's Lesson
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="optionsmenu" id="optionsmenu2" autocomplete="off"> List Lesson
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="optionsmenu" id="optionsmenu3" autocomplete="off"> Comment
                </label>
            </div>
        </div>

        <div class="todayslesson" id="todayslesson">
            <h2>Notification</h2>
                <p>{{course.notification}}</p>
            <h2>Exercise</h2>
                <p>{{course.exercise}}</p>
            <a href="/streamroom/{{course._id}}"><button type="button" class="btn btn-outline-primary">Learn Online</button></a>
            <h2>Certification</h2>
            {{#if checkresult}}
            <a href="/mycourse/certification/{{course._id}}"><button class="btn btn-outline-primary">Get Certification</button></a>
            {{else}}
            <p>Finished Course to get certification.</p>
            {{/if}}
        </div>

        <div class="listlesson" id="listlesson">
            {{#each course.listvideo}}
            <a href="/mycourse/{{this.idvideo}}"><button type="button" class="btn btn-outline-secondary btn-block">{{this.title}}</button></a>
            {{/each}}
        </div>
    </div>


</div>

<script>
    document.addEventListener('DOMContentLoaded', function(event){
        $('#optionsmenu1').change(function(){
            
            $('#listlesson').hide();
            $('#todayslesson').show();
        })

        $('#optionsmenu2').change(function(){
            $('#todayslesson').hide();
            $('#listlesson').show();
        })

    })
</script>


















