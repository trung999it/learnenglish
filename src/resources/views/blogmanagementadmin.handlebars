        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-10" id="titleordermanagement">
                        <h2><b>Blog</b> Management</h2>
                    </div>
                </div>
            </div>
            <input type="text" name="searchorder" id="searchorder" class="form-control form-control-sm" placeholder="Enter blog tittle ...">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Blog Tittle</th>
                        <th>Author</th>						
                        <th>Status</th>
                        <th>Detail</th>
                        <th>Change Status</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each blogs}}
                        <tr>
                            <th>{{this.blogtittle}}</th>
                            <td>{{this.author}}</td>
                            <td>{{this.blogstatus}}</td>
                            <td><a href="/blog/{{this._id}}"><button class="btn btn-outline-secondary" id="btndetailblog">Detail</button></a></td>
                            <td><button class="btn btn-outline-primary" id="btnchangestatus" data-toggle="modal" data-target="#modalchangestatus" data-idblogchange="{{this._id}}">Change</button></td>
                            <td><button class="btn btn-outline-danger" id="btndeleteblog" data-toggle="modal" data-target="#modaldeleteblog" data-idblog="{{this._id}}">Delete</button></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
