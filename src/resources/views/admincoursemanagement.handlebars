<div class="coursedetain-addmin-contain">
    <div class="v-introduce">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/{{course.idvideointro}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <h2>{{course.coursename}}</h2>
    </div>
    <div class="addinfocourse">
        <h1>Course Detail</h1>
        <p>Description:</p>
        <p>{{course.description}}</p>
        <p>Author: {{course.author}}</p>
        <p>Required: {{course.required}}</p>
        <p>Gained: {{course.gained}}</p>
        <p>Openday: {{course.openday}}</p>
        <p>Endday: {{course.endday}}</p>
        <p>Timetable: {{course.timetable}}</p>
        <p>Active status: {{course.active_status}}</p>
        {{#if course.course_status}}
        <p>Course status: Active</p>
        {{else}}
        <p>Course status: InActive</p>
        {{/if}}
        <h1>Change Course Status</h1>
        <form action="/course_management/{{course._id}}" method="post" name="formchangecoursestatus">
            <select name="coursestatus" id="coursestatus" class="form-control" style="width: 200px;" required>
                <option value="">Choose Status</option>
                <option value="0">InActive</option>
                <option value="1">Active</option>
            </select>
        </form>
    </div>
</div>
<div class="addminlistvideo">
    <h1>List Video</h1>
    <div class="videos">
        {{#each course.listvideo}}
            <div class="onevideo">
                <iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{this.idvideo}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <span>{{this.title}}</span>
            </div>
        {{/each}}
    </div>
</div>













